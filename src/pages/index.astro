---
import Layout from '../layouts/Layout.astro';
import NavBar from '../components/NavBar.astro';
import HeroCarousel from '../components/react/HeroCarousel';
import CredibilityBar from '../components/CredibilityBar.astro';
import CaseStudyCard from '../components/CaseStudyCard.astro';
import BlogGrid from '../components/react/BlogGrid';
import Footer from '../components/Footer.astro';

// Sample data
const credibilityMetrics = [
  { value: '150', label: 'AI Projects Delivered', suffix: '+' },
  { value: '98', label: 'Client Success Rate', suffix: '%' },
  { value: '50', label: 'Enterprise Clients', suffix: '+' },
  { value: '2.5M', label: 'Data Points Processed', suffix: '+' }
];

const featuredCaseStudies = [
  {
    industry: 'Financial Services',
    title: 'AI-Powered Risk Assessment Platform',
    description: 'Implemented LLM-based risk analysis system that processes regulatory documents and market data in real-time.',
    outcomeMetric: 'Risk Detection',
    metricValue: '85%',
    stackIcons: ['LLM', 'AWS', 'PT'],
    link: '/case-studies/financial-risk-ai',
    imageUrl: 'https://images.pexels.com/photos/5439381/pexels-photo-5439381.jpeg?auto=compress&cs=tinysrgb&w=600'
  },
  {
    industry: 'Healthcare',
    title: 'Clinical Decision Support System',
    description: 'Developed GenAI solution for automated diagnosis assistance and treatment recommendations.',
    outcomeMetric: 'Accuracy',
    metricValue: '94%',
    stackIcons: ['GPT', 'Azure', 'ML'],
    link: '/case-studies/healthcare-diagnosis-ai',
    imageUrl: 'https://images.pexels.com/photos/4386464/pexels-photo-4386464.jpeg?auto=compress&cs=tinysrgb&w=600'
  }
];

const featuredPosts = [
  {
    title: 'The Future of Enterprise LLMs: Trends and Predictions for 2024',
    excerpt: 'Explore the latest developments in large language models and their impact on enterprise operations.',
    date: 'March 15, 2024',
    category: 'AI Strategy',
    slug: 'future-enterprise-llms-2024',
    readTime: '8 min read'
  },
  {
    title: 'Building RAG Systems: Best Practices and Common Pitfalls',
    excerpt: 'A comprehensive guide to implementing Retrieval-Augmented Generation systems at scale.',
    date: 'March 12, 2024',
    category: 'Technical',
    slug: 'building-rag-systems-guide',
    readTime: '12 min read'
  }
];
---

<Layout title="Pinhead Analytics - Leading AI & Data Consulting Firm">
  <NavBar />
  
  <main class="pt-20">
    <!-- Dynamic Hero Carousel -->
    <HeroCarousel client:load />

    <!-- Credibility Bar -->
    <CredibilityBar metrics={credibilityMetrics} />

    <!-- Services Overview -->
    <section class="py-32 bg-secondary relative overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0 bg-gradient-to-br from-accent/5 via-transparent to-magenta/5"></div>
      <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-accent/10 rounded-full blur-3xl animate-float"></div>
      
      <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
        <div class="text-center mb-20">
          <h2 class="text-5xl lg:text-6xl font-space font-bold text-text mb-6 animate-slide-up">
            Comprehensive AI & Data Solutions
          </h2>
          <p class="text-xl lg:text-2xl text-text-muted max-w-4xl mx-auto leading-relaxed animate-fade-in" style="animation-delay: 0.3s; opacity: 0; animation-fill-mode: forwards;">
            From strategy to implementation, we provide end-to-end AI services that drive measurable business impact across your entire data ecosystem.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
          <!-- Generative AI & LLMs -->
          <div class="group bg-surface/80 backdrop-blur-sm p-10 rounded-4xl transition-all duration-700 hover:bg-surface hover:shadow-card-hover hover:-translate-y-3 border border-border hover:border-accent/30 animate-scale-in" style="animation-delay: 0.1s; opacity: 0; animation-fill-mode: forwards;">
            <div class="w-16 h-16 bg-accent/10 rounded-3xl flex items-center justify-center mb-8 group-hover:bg-accent/20 transition-all duration-500 group-hover:scale-110 border border-accent/20">
              <svg class="w-8 h-8 text-accent transition-transform duration-500 group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-space font-bold text-text mb-4 group-hover:text-accent transition-colors duration-300">Generative AI & LLMs</h3>
            <p class="text-text-muted leading-relaxed">Custom large language models, RAG systems, and generative AI solutions for content creation and automation.</p>
          </div>
          
          <!-- Multi-Agent Applications -->
          <div class="group bg-surface/80 backdrop-blur-sm p-10 rounded-4xl transition-all duration-700 hover:bg-surface hover:shadow-card-hover hover:-translate-y-3 border border-border hover:border-magenta/30 animate-scale-in" style="animation-delay: 0.2s; opacity: 0; animation-fill-mode: forwards;">
            <div class="w-16 h-16 bg-magenta/10 rounded-3xl flex items-center justify-center mb-8 group-hover:bg-magenta/20 transition-all duration-500 group-hover:scale-110 border border-magenta/20">
              <svg class="w-8 h-8 text-magenta transition-transform duration-500 group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-space font-bold text-text mb-4 group-hover:text-magenta transition-colors duration-300">Multi-Agent Applications</h3>
            <p class="text-text-muted leading-relaxed">Sophisticated AI ecosystems where multiple agents collaborate to solve complex business problems autonomously.</p>
          </div>
          
          <!-- MCP Server Development -->
          <div class="group bg-surface/80 backdrop-blur-sm p-10 rounded-4xl transition-all duration-700 hover:bg-surface hover:shadow-card-hover hover:-translate-y-3 border border-border hover:border-accent/30 animate-scale-in" style="animation-delay: 0.3s; opacity: 0; animation-fill-mode: forwards;">
            <div class="w-16 h-16 bg-accent/10 rounded-3xl flex items-center justify-center mb-8 group-hover:bg-accent/20 transition-all duration-500 group-hover:scale-110 border border-accent/20">
              <svg class="w-8 h-8 text-accent transition-transform duration-500 group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-space font-bold text-text mb-4 group-hover:text-accent transition-colors duration-300">MCP Server Development</h3>
            <p class="text-text-muted leading-relaxed">Model Context Protocol servers for seamless AI model integration and secure context management.</p>
          </div>
          
          <!-- LLMOps & MLOps -->
          <div class="group bg-surface/80 backdrop-blur-sm p-10 rounded-4xl transition-all duration-700 hover:bg-surface hover:shadow-card-hover hover:-translate-y-3 border border-border hover:border-magenta/30 animate-scale-in" style="animation-delay: 0.4s; opacity: 0; animation-fill-mode: forwards;">
            <div class="w-16 h-16 bg-magenta/10 rounded-3xl flex items-center justify-center mb-8 group-hover:bg-magenta/20 transition-all duration-500 group-hover:scale-110 border border-magenta/20">
              <svg class="w-8 h-8 text-magenta transition-transform duration-500 group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-space font-bold text-text mb-4 group-hover:text-magenta transition-colors duration-300">LLMOps & MLOps</h3>
            <p class="text-text-muted leading-relaxed">Production-ready ML pipelines, monitoring, and automated deployment systems for reliable AI operations.</p>
          </div>
          
          <!-- Machine Learning & AI -->
          <div class="group bg-surface/80 backdrop-blur-sm p-10 rounded-4xl transition-all duration-700 hover:bg-surface hover:shadow-card-hover hover:-translate-y-3 border border-border hover:border-accent/30 animate-scale-in" style="animation-delay: 0.5s; opacity: 0; animation-fill-mode: forwards;">
            <div class="w-16 h-16 bg-accent/10 rounded-3xl flex items-center justify-center mb-8 group-hover:bg-accent/20 transition-all duration-500 group-hover:scale-110 border border-accent/20">
              <svg class="w-8 h-8 text-accent transition-transform duration-500 group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-space font-bold text-text mb-4 group-hover:text-accent transition-colors duration-300">Machine Learning & AI</h3>
            <p class="text-text-muted leading-relaxed">Comprehensive ML solutions from traditional algorithms to deep learning and neural networks.</p>
          </div>
          
          <!-- Data Science -->
          <div class="group bg-surface/80 backdrop-blur-sm p-10 rounded-4xl transition-all duration-700 hover:bg-surface hover:shadow-card-hover hover:-translate-y-3 border border-border hover:border-magenta/30 animate-scale-in" style="animation-delay: 0.6s; opacity: 0; animation-fill-mode: forwards;">
            <div class="w-16 h-16 bg-magenta/10 rounded-3xl flex items-center justify-center mb-8 group-hover:bg-magenta/20 transition-all duration-500 group-hover:scale-110 border border-magenta/20">
              <svg class="w-8 h-8 text-magenta transition-transform duration-500 group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-space font-bold text-text mb-4 group-hover:text-magenta transition-colors duration-300">Data Science</h3>
            <p class="text-text-muted leading-relaxed">Advanced statistical analysis, predictive modeling, and data-driven insights for strategic decision making.</p>
          </div>
          
          <!-- Data Engineering -->
          <div class="group bg-surface/80 backdrop-blur-sm p-10 rounded-4xl transition-all duration-700 hover:bg-surface hover:shadow-card-hover hover:-translate-y-3 border border-border hover:border-accent/30 animate-scale-in" style="animation-delay: 0.7s; opacity: 0; animation-fill-mode: forwards;">
            <div class="w-16 h-16 bg-accent/10 rounded-3xl flex items-center justify-center mb-8 group-hover:bg-accent/20 transition-all duration-500 group-hover:scale-110 border border-accent/20">
              <svg class="w-8 h-8 text-accent transition-transform duration-500 group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-space font-bold text-text mb-4 group-hover:text-accent transition-colors duration-300">Data Engineering</h3>
            <p class="text-text-muted leading-relaxed">Robust data pipelines, warehousing, and infrastructure for AI-ready data architecture.</p>
          </div>
          
          <!-- Business Analytics -->
          <div class="group bg-surface/80 backdrop-blur-sm p-10 rounded-4xl transition-all duration-700 hover:bg-surface hover:shadow-card-hover hover:-translate-y-3 border border-border hover:border-magenta/30 animate-scale-in" style="animation-delay: 0.8s; opacity: 0; animation-fill-mode: forwards;">
            <div class="w-16 h-16 bg-magenta/10 rounded-3xl flex items-center justify-center mb-8 group-hover:bg-magenta/20 transition-all duration-500 group-hover:scale-110 border border-magenta/20">
              <svg class="w-8 h-8 text-magenta transition-transform duration-500 group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-space font-bold text-text mb-4 group-hover:text-magenta transition-colors duration-300">Business Analytics</h3>
            <p class="text-text-muted leading-relaxed">Interactive dashboards, KPI tracking, and business intelligence solutions for operational excellence.</p>
          </div>
          
          <!-- AI Strategy & Roadmapping -->
          <div class="group bg-surface/80 backdrop-blur-sm p-10 rounded-4xl transition-all duration-700 hover:bg-surface hover:shadow-card-hover hover:-translate-y-3 border border-border hover:border-accent/30 animate-scale-in" style="animation-delay: 0.9s; opacity: 0; animation-fill-mode: forwards;">
            <div class="w-16 h-16 bg-accent/10 rounded-3xl flex items-center justify-center mb-8 group-hover:bg-accent/20 transition-all duration-500 group-hover:scale-110 border border-accent/20">
              <svg class="w-8 h-8 text-accent transition-transform duration-500 group-hover:rotate-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-space font-bold text-text mb-4 group-hover:text-accent transition-colors duration-300">AI Strategy & Roadmapping</h3>
            <p class="text-text-muted leading-relaxed">Strategic roadmaps for AI adoption and digital transformation aligned with business objectives.</p>
          </div>
        </div>
        
        <div class="text-center mt-16 animate-fade-in" style="animation-delay: 1s; opacity: 0; animation-fill-mode: forwards;">
          <a
            href="/services"
            class="group inline-flex items-center px-10 py-5 border-2 border-accent/30 text-accent font-medium rounded-3xl transition-all duration-500 hover:border-accent hover:bg-accent/10 hover:shadow-glow backdrop-blur-sm hover:scale-105"
          >
            <span class="mr-3">Explore All Services</span>
            <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Featured Case Studies -->
    <section class="py-32 relative overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0 bg-gradient-to-br from-magenta/5 via-transparent to-accent/5"></div>
      <div class="absolute bottom-1/4 left-1/4 w-80 h-80 bg-magenta/10 rounded-full blur-3xl animate-float" style="animation-delay: -2s;"></div>
      
      <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
        <div class="text-center mb-20">
          <h2 class="text-5xl lg:text-6xl font-space font-bold text-text mb-6 animate-slide-up">
            Success Stories
          </h2>
          <p class="text-xl lg:text-2xl text-text-muted max-w-4xl mx-auto leading-relaxed animate-fade-in" style="animation-delay: 0.3s; opacity: 0; animation-fill-mode: forwards;">
            Real results from our AI implementations across various industries.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-10 lg:gap-12">
          {featuredCaseStudies.map((study, index) => (
            <div class="animate-scale-in" style={`animation-delay: ${0.2 + index * 0.2}s; opacity: 0; animation-fill-mode: forwards;`}>
              <CaseStudyCard
                industry={study.industry}
                title={study.title}
                description={study.description}
                outcomeMetric={study.outcomeMetric}
                metricValue={study.metricValue}
                stackIcons={study.stackIcons}
                link={study.link}
                imageUrl={study.imageUrl}
              />
            </div>
          ))}
        </div>
        
        <div class="text-center mt-16 animate-fade-in" style="animation-delay: 0.8s; opacity: 0; animation-fill-mode: forwards;">
          <a
            href="/case-studies"
            class="group inline-flex items-center px-10 py-5 border-2 border-accent/30 text-accent font-medium rounded-3xl transition-all duration-500 hover:border-accent hover:bg-accent/10 hover:shadow-glow backdrop-blur-sm hover:scale-105"
          >
            <span class="mr-3">View All Case Studies</span>
            <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Featured Insights -->
    <section class="py-32 bg-secondary relative overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0 bg-gradient-to-br from-accent/5 via-transparent to-magenta/5"></div>
      <div class="absolute top-1/3 right-1/3 w-96 h-96 bg-accent/10 rounded-full blur-3xl animate-float"></div>
      
      <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
        <div class="text-center mb-20">
          <h2 class="text-5xl lg:text-6xl font-space font-bold text-text mb-6 animate-slide-up">
            Latest Insights
          </h2>
          <p class="text-xl lg:text-2xl text-text-muted max-w-4xl mx-auto leading-relaxed animate-fade-in" style="animation-delay: 0.3s; opacity: 0; animation-fill-mode: forwards;">
            Stay ahead with expert perspectives on AI trends, best practices, and industry insights.
          </p>
        </div>
        
        <div class="animate-fade-in" style="animation-delay: 0.5s; opacity: 0; animation-fill-mode: forwards;">
          <BlogGrid posts={featuredPosts} featured={true} client:load />
        </div>
        
        <div class="text-center mt-16 animate-fade-in" style="animation-delay: 0.8s; opacity: 0; animation-fill-mode: forwards;">
          <a
            href="/insights"
            class="group inline-flex items-center px-10 py-5 border-2 border-accent/30 text-accent font-medium rounded-3xl transition-all duration-500 hover:border-accent hover:bg-accent/10 hover:shadow-glow backdrop-blur-sm hover:scale-105"
          >
            <span class="mr-3">Read All Insights</span>
            <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-32 bg-gradient-to-r from-accent/10 to-magenta/10 relative overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0 bg-gradient-to-br from-accent/20 via-transparent to-magenta/20"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-accent/20 rounded-full blur-3xl animate-pulse-glow"></div>
      
      <div class="max-w-7xl mx-auto px-6 lg:px-8 text-center relative z-10">
        <h2 class="text-5xl lg:text-6xl font-space font-bold text-text mb-6 animate-slide-up">
          Ready to Transform Your Business with AI?
        </h2>
        <p class="text-xl lg:text-2xl text-text-muted mb-12 max-w-4xl mx-auto leading-relaxed animate-fade-in" style="animation-delay: 0.3s; opacity: 0; animation-fill-mode: forwards;">
          Let's discuss how our GenAI and LLM expertise can drive innovation and growth for your organization.
        </p>
        <div class="flex flex-col sm:flex-row gap-6 justify-center animate-fade-in" style="animation-delay: 0.6s; opacity: 0; animation-fill-mode: forwards;">
          <a
            href="/contact"
            class="group relative inline-flex items-center justify-center px-12 py-6 bg-gradient-to-r from-accent to-magenta text-white font-medium rounded-3xl transition-all duration-500 transform hover:scale-105 hover:shadow-glow-lg overflow-hidden"
          >
            <span class="relative z-10 flex items-center text-lg">
              Contact Us Today
              <svg class="ml-3 w-6 h-6 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </span>
            <div class="absolute inset-0 bg-gradient-to-r from-magenta to-accent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="absolute inset-0 bg-white/20 transform -skew-x-12 -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
          </a>
          <a
            href="/services"
            class="group inline-flex items-center justify-center px-12 py-6 border-2 border-accent/30 text-accent font-medium rounded-3xl transition-all duration-500 hover:border-accent hover:bg-accent/10 hover:shadow-glow backdrop-blur-sm hover:scale-105"
          >
            <span class="flex items-center text-lg">
              Explore Our Services
              <svg class="ml-3 w-6 h-6 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </span>
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>