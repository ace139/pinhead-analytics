---
import { Image } from 'astro:assets';

export interface Props {
  industry: string;
  title: string;
  description: string;
  outcomeMetric: string;
  metricValue: string;
  stackIcons: string[];
  link: string;
  imageUrl?: string;
}

const { 
  industry, 
  title, 
  description, 
  outcomeMetric, 
  metricValue, 
  stackIcons, 
  link,
  imageUrl 
} = Astro.props;
---

<div class="group relative bg-surface/80 backdrop-blur-sm rounded-2xl sm:rounded-3xl lg:rounded-4xl overflow-hidden transition-all duration-700 hover:bg-surface hover:shadow-card-hover hover:-translate-y-2 border border-border hover:border-accent/30 h-full flex flex-col">
  <!-- Glow Effect -->
  <div class="absolute inset-0 bg-gradient-to-r from-accent/5 to-magenta/5 opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
  
  {imageUrl && (
    <div class="relative h-48 sm:h-56 lg:h-64 overflow-hidden flex-shrink-0">
      <Image 
        src={imageUrl} 
        alt={title}
        width={600}
        height={400}
        format="webp"
        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-surface via-surface/50 to-transparent"></div>
      <div class="absolute inset-0 bg-gradient-to-r from-accent/10 to-magenta/10 opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
    </div>
  )}
  
  <div class="relative z-10 p-4 sm:p-6 lg:p-8 xl:p-10 flex flex-col flex-grow">
    <div class="flex items-center justify-between mb-4 sm:mb-6">
      <span class="inline-flex items-center px-3 sm:px-4 py-1.5 sm:py-2 bg-accent/10 text-accent text-xs sm:text-sm font-medium rounded-xl sm:rounded-2xl border border-accent/20 backdrop-blur-sm transition-all duration-300 group-hover:bg-accent/20 group-hover:scale-105">
        {industry}
      </span>
      <div class="flex flex-wrap gap-1.5 sm:gap-2 justify-end">
        {stackIcons.map((icon, index) => (
          <div 
            class="min-w-[2rem] sm:min-w-[2.5rem] h-6 sm:h-8 px-2 sm:px-3 bg-surface-light rounded-lg sm:rounded-xl flex items-center justify-center text-xs font-medium text-accent border border-border transition-all duration-300 group-hover:border-accent/50 group-hover:bg-accent/10 group-hover:scale-110 whitespace-nowrap"
            style={`transition-delay: ${index * 100}ms;`}
          >
            <span class="truncate max-w-[3rem] sm:max-w-[4rem]" title={icon}>
              {icon}
            </span>
          </div>
        ))}
      </div>
    </div>
    
    <h3 class="text-lg sm:text-xl lg:text-2xl xl:text-3xl font-space font-bold text-text mb-3 sm:mb-4 leading-tight transition-colors duration-300 group-hover:text-accent min-h-[3rem] sm:min-h-[4rem] flex items-start">
      {title}
    </h3>
    
    <p class="text-text-muted mb-6 sm:mb-8 leading-relaxed text-sm sm:text-base lg:text-lg flex-grow min-h-[4rem] sm:min-h-[6rem] flex items-start">
      {description}
    </p>
    
    <div class="flex items-center justify-between mt-auto">
      <div class="space-y-1 sm:space-y-2">
        <div class="text-2xl sm:text-3xl lg:text-4xl font-space font-bold text-magenta transition-all duration-300 group-hover:scale-110 origin-left">
          {metricValue}
        </div>
        <div class="text-xs sm:text-sm text-text-muted font-medium">
          {outcomeMetric}
        </div>
      </div>
      
      <a
        href={link}
        class="inline-flex items-center text-accent hover:text-magenta transition-all duration-300 font-medium group/link text-sm sm:text-base"
      >
        <span class="mr-2">Read More</span>
        <svg class="w-4 h-4 sm:w-5 sm:h-5 transition-transform duration-300 group-hover/link:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
  
  <!-- Hover Border Effect -->
  <div class="absolute inset-0 rounded-2xl sm:rounded-3xl lg:rounded-4xl border-2 border-transparent group-hover:border-accent/20 transition-all duration-700 pointer-events-none"></div>
</div>